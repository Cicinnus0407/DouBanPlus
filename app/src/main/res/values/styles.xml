<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>

        <!--定义AlertDialog的颜色-->
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="About">

    </style>

    <!--搜素主题-->
    <style name="Search" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SearchWindowAnimations</item>
    </style>
    <!--搜索的进出动画-->
    <style name="SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out_rapidly</item>
    </style>
</resources>
