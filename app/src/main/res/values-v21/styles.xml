<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#ff292929</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/grey_300</item>
        <!--<item name="android:windowBackground">@color/background_light</item>-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <!--半透明主题-->
    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>



    <!--关于的主题-->
    <style name="About" parent="AppTheme">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowEnterTransition">@transition/about_enter</item>
        <item name="android:windowReturnTransition">@transition/about_return</item>
    </style>


    <!--搜索主题-->
    <style name="Search" parent="AppTheme.Translucent">
        <item name="android:windowAnimationStyle">@style/SearchWindowAnimations</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowEnterTransition">@transition/search_enter</item>
        <item name="android:windowReturnTransition">@transition/search_return</item>
        <item name="android:windowSharedElementEnterTransition">@transition/search_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/search_shared_return</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>

    <!--白色的按钮主题-->
    <style name="DarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
    </style>

    <style name="SearchViewTheme" parent="DarkOverlay">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.DouBanPlus.SearchView</item>
    </style>

    <!--searchView的样式-->
    <style name="Widget.DouBanPlus.SearchView" parent="android:style/Widget.Material.SearchView">
        <!--去掉search图标-->
        <item name="android:searchIcon">@android:color/transparent</item>
        <!--透明背景-->
        <item name="android:queryBackground">@android:color/transparent</item>
        <!--透明的提交背景-->
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>


    <!--电影详情主题-->
    <style name="MovieDetail" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/movie_detail_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/movie_detail_shared_return</item>
        <item name="android:windowEnterTransition">@transition/movie_detail_enter</item>
        <item name="android:windowReturnTransition">@transition/movie_detail_return</item>

    </style>

</resources>